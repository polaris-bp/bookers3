<div class='container'>
<div class='row'>

<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>

  <%= render 'shared/error_messages', model: @user %>

  <div class="form-group">
    <label for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name", class:'form-control' %>
  </div>

  <div class="form-group">
    <label for="inputImage">Image</label>
    <%= f.attachment_field :profile_image, placeholder: 'profile image', class:'form-control-file' %>
  </div>

  <div class="form-group">
    <label for="inputIntroduction">Introduction</label>
    <%= f.text_field :introduction, placeholder: "introduction", class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Update User", class: "btn btn-secondary"  %>
  </div>
<% end %>
</div>

</div>
</div>